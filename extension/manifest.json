{
  "name": "Check Less",
  "version": "1.0.1",
  "manifest_version": 2,
  "description": "Check Less helps you check distracting websites less.",
  "page_action": {
    "default_icon": "icon.ico"
  },
  "permissions": [
    "storage",
  	"declarativeWebRequest",
   	"<all_urls>",
    "alarms",
    "notifications"
  ],
  "background": {
    "scripts": ["event_page.js"],
    "persistent": false
  },
  "web_accessible_resources": [
    "icon.ico"
  ],
  "options_page" : "views/options.html"
}