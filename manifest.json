{
  "name": "Decide",
  "version": "1.0",
  "manifest_version": 2,
  "description": "Decide helps you focus.",
  "page_action": {
    "default_icon": "icon.png"
  },
  "permissions": [
    "storage",
  	"declarativeWebRequest",
   	"<all_urls>"
  ],
  "background": {
    "scripts": ["event_page.js"],
    "persistent": false
  },
  "options_page" : "views/options.html"
}